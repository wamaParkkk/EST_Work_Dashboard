<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EST Work Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EST_Work_Dashboard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Noto Sans KR', sans-serif;
        }
    </style>    
</head>

<body>    
    <div class="d-flex">
        <!-- 사이드 메뉴 -->
        <!--<div class="sidebar" style="width: 240px; background-color: #f8f9fa; padding: 10px;">-->
        <div class="sidebar">
            <div class="text-center mb-3">
                <img src="~/logo.png" alt="Logo" height="60" />
                <div class="fw-bold mt-2">EST Work Dashboard</div>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/DailyRawDataPage/Index">
                        <i class="bi bi-table"></i><span class="ms-2">Daily Raw Data</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/EqSupportOverview/Index">
                        <i class="bi bi-tools"></i><span class="ms-2">EQ Support Overview</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/LayOut/Index">
                        <i class="bi bi-grid"></i><span class="ms-2">Lay Out</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Training/Index">
                        <i class="bi bi-book"></i><span class="ms-2">Training</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-page="/Admin/CPManagement">
                        <i class="bi bi-gear"></i><span class="ms-2">관리자</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- 본문 영역 -->
        <main class="flex-fill p-4 bg-white" style="overflow-x: auto;">
            @RenderBody()
        </main>
    </div>  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>